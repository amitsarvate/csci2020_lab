<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.javafxproject.HelloController"
          prefHeight="800" prefWidth="800" hgap="100" vgap="10">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="usernameLabel" text="Username: "
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>

    <TextField fx:id="username"
        GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label fx:id="passwordLabel" text="Password: "
           GridPane.columnIndex="0" GridPane.rowIndex="1"
           GridPane.columnSpan="2"/>

    <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label fx:id="fullNameLabel" text="Full Name: "
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           GridPane.columnSpan="2"/>

    <TextField fx:id="fullName"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label fx:id="emailLabel" text="E-Mail: "
           GridPane.columnIndex="0" GridPane.rowIndex="3"
           GridPane.columnSpan="2"/>

    <TextField fx:id="email"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label fx:id="phoneNumberLabel" text="Phone #: "
           GridPane.columnIndex="0" GridPane.rowIndex="4"
           GridPane.columnSpan="2"/>

    <TextField fx:id="phoneNumber"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label fx:id="dobLabel" text="Date of Birth: "
           GridPane.columnIndex="0" GridPane.rowIndex="5"
           GridPane.columnSpan="2"/>

    <DatePicker fx:id="dob"
                GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Button fx:id="register" text="Register" onAction="#handleButtonClick"
            GridPane.columnIndex="0" GridPane.rowIndex="6"
            GridPane.columnSpan="2"/>

</GridPane>
